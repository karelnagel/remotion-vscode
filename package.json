{
	"name": "remotion-vscode",
	"description": "Remotion VSCode extension",
	"version": "0.0.1",
	"publisher": "@karelnagel",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/karelnagel/remotion-vscode"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:remotion.view",
		"onCommand:remotion.startPreview",
		"onCommand:remotion.endPreview",
		"onCommand:remotion.render",
		"onCommand:remotion.openBrowser"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "remotion",
					"title": "Remotion",
					"icon": "resources/package-explorer.svg"
				}
			]
		},
		"views": {
			"remotion": [
				{
					"type": "webview",
					"id": "remotion.view",
					"name": "Remotion"
				}
			]
		},
		"commands": [
			{
				"command": "remotion.selectIndexFile",
				"category": "Remotion",
				"title": "Select index file"
			},
			{
				"command": "remotion.refreshComps",
				"category": "Remotion",
				"title": "Refresh compositions"
			},
			{
				"command": "remotion.setProps",
				"category": "Remotion",
				"title": "Set props"
			},
			{
				"command": "remotion.newProps",
				"category": "Remotion",
				"title": "New props"
			},
			{
				"command": "remotion.deleteProps",
				"category": "Remotion",
				"title": "Delete props"
			},
			{
				"command": "remotion.loadProps",
				"category": "Remotion",
				"title": "Load props"
			},
			{
				"command": "remotion.openBrowser",
				"category": "Remotion",
				"title": "Open browser"
			},
			{
				"command": "remotion.startPreview",
				"category": "Remotion",
				"title": "Start preview"
			},
			{
				"command": "remotion.render",
				"category": "Remotion",
				"title": "Render",
				"icon": "$(clear-all)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "remotion.startPreview",
					"group": "navigation",
					"when": "view == remotion.view"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"dependencies": {
		"@remotion/bundler": "3.2.16",
		"@remotion/renderer": "3.2.16",
		"@types/react": "^18.0.20",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remotion": "3.2.16"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.7.2"
	}
}